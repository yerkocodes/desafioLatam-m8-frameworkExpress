  <body>
    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Registro</h2>
      <hr class="w-50" />

      <form action="/registro" method="post" enctype="multipart/form-data">
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input id="formEmail" type="email" class="form-control m-auto" name="email" value="yerkocortes@gmail.com" required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input id="formName" type="text" class="form-control m-auto" name="nombre" value="YejOK"required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input id="formPass" type="password" class="form-control m-auto" name="password" value="123"required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input id="formPassTwo" type="password" class="form-control m-auto" name="password2" value="123" required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Años de experiencia</label>
            <input id="formExperience" type="number" class="form-control m-auto" name="anos" value="2"required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input id="formSpecialty" type="text" class="form-control m-auto" name="especialidad" value="Flip"required/>
          </div>
          <div class="form-group col-12 col-sm-12">
            <label>Foto de perfil</label>
            <input id="formPic" type="file" id="foto" name="foto"required/>
          </div>
        </div>
      <input type="submit" value="Registarme">
      {{!-- <button class="btn btn-info mb-3" onclick="nuevoSkater()">Registrarme</button> --}}
        <p><a href="./login"> Iniciar sesión</a></p>
      </form>

    </div>
    {{!-- <script href="/script/script.js"></script> --}}
